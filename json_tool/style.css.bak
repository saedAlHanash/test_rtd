:root {
    --bg-color: #0F172A;
    --card-bg: rgba(30, 41, 59, 0.7);
    --input-bg: rgba(15, 23, 42, 0.6);
    --border-color: rgba(148, 163, 184, 0.2);
    --text-primary: #F8FAFC;
    --text-secondary: #94A3B8;
    --accent: #6340D6;
    --accent-hover: #4F32AD;
    --teal: #10D1BD;
    --gradient-bg: linear-gradient(135deg, #0F172A 0%, #1a1a2e 100%);
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Cairo', sans-serif;
}

body {
    background: var(--gradient-bg);
    color: var(--text-primary);
    min-height: 100vh;
    padding: 2rem;
    direction: rtl;
    background-attachment: fixed;
}

/* Background Animation/Effect */
body::before {
    content: '';
    position: fixed;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle at center, rgba(99, 64, 214, 0.15) 0%, transparent 50%);
    z-index: -1;
    pointer-events: none;
}

.main-container {
    max-width: 1200px;
    margin: 0 auto;
}

.app-header {
    text-align: center;
    margin-bottom: 3rem;
    position: relative;
}

.app-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    background: linear-gradient(to right, #fff, #94A3B8);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 0.5rem;
}

.app-header h1 span {
    background: linear-gradient(to right, var(--teal), var(--accent));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.app-header p {
    color: var(--text-secondary);
}

/* Glass Panel */
.glass-panel {
    background: var(--card-bg);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
}

.editor-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 2rem;
}

@media (max-width: 900px) {
    .editor-grid {
        grid-template-columns: 1fr;
    }
}

/* Sections */
h2 {
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
    color: var(--teal);
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
}

@media (max-width: 600px) {
    .form-row {
        grid-template-columns: 1fr;
    }
}

.form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.form-group label {
    font-size: 0.9rem;
    color: var(--text-secondary);
    font-weight: 600;
}

input[type="text"],
input[type="url"],
textarea {
    background: var(--input-bg);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    padding: 0.75rem 1rem;
    color: #fff;
    font-size: 1rem;
    transition: all 0.3s ease;
    width: 100%;
}

textarea {
    resize: vertical;
    min-height: 80px;
}

textarea:focus,
input[type="text"]:focus,
input[type="url"]:focus {
    outline: none;
    border-color: var(--accent);
    box-shadow: 0 0 0 3px rgba(99, 64, 214, 0.2);
}

/* LTR Input Support */
.ltr-input input, .ltr-input textarea, .ltr-input label {
    direction: ltr;
    text-align: left;
    font-family: 'Outfit', sans-serif;
}

/* Color Pickers */
.color-picker-wrapper {
    display: flex;
    gap: 0.5rem;
    align-items: center;
}

input[type="color"] {
    -webkit-appearance: none;
    border: none;
    width: 50px;
    height: 42px;
    border-radius: 8px;
    background: none;
    cursor: pointer;
    overflow: hidden;
    padding: 0;
}

input[type="color"]::-webkit-color-swatch-wrapper {
    padding: 0;
}

input[type="color"]::-webkit-color-swatch {
    border: none;
    border-radius: 8px;
}

/* Buttons */
.action-area {
    margin-top: 2rem;
    text-align: left; /* Align to the end of form */
}

.primary-btn {
    background: linear-gradient(135deg, var(--accent) 0%, #4F32AD 100%);
    color: white;
    border: none;
    padding: 1rem 2.5rem;
    border-radius: 12px;
    font-size: 1.1rem;
    font-weight: 700;
    cursor: pointer;
    transition: transform 0.2s, box-shadow 0.2s;
    width: 100%;
}

.primary-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px -5px rgba(99, 64, 214, 0.4);
}

.primary-btn:active {
    transform: translateY(0);
}

/* Output Section */
.output-section {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.gradient-preview h3, .output-header h3 {
    margin-bottom: 0.5rem;
    font-size: 1rem;
    color: var(--text-secondary);
}

.gradient-box {
    width: 100%;
    height: 100px;
    border-radius: 12px;
    background: linear-gradient(135deg, #6340D6, #10D1BD);
    box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    border: 1px solid rgba(255,255,255,0.1);
}

.json-output {
    position: relative;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
}

.output-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
}

.icon-btn {
    background: rgba(255,255,255,0.1);
    border: none;
    color: var(--text-primary);
    padding: 0.5rem 1rem;
    border-radius: 6px;
    cursor: pointer;
    transition: background 0.2s;
    font-size: 0.9rem;
    display: flex;
    align-items: center;
    gap: 0.4rem;
}

.icon-btn:hover {
    background: rgba(255,255,255,0.2);
}

pre {
    background: #0B1120;
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    font-family: 'Fira Code', 'Courier New', monospace;
    font-size: 0.9rem;
    line-height: 1.6;
    color: #E2E8F0;
    direction: ltr; /* JSON is always LTR */
    text-align: left;
    border: 1px solid var(--border-color);
    flex-grow: 1;
}

/* Syntax Highlighting overrides */
.json-key { color: #f9a8d4; }
.json-string { color: #86efac; }
.json-number { color: #93c5fd; }
.json-boolean { color: #fca5a5; }
.json-null { color: #cbd5e1; }

